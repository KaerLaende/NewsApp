<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1" author="Kaer">
        <createTable tableName="category">
            <column autoIncrement="true" name="ID" startWith="1" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="id"/>
            </column>
            <column name="category_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Kaer">
        <createTable tableName="news">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="publish_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Kaer">
        <addForeignKeyConstraint baseColumnNames="category_id" baseTableName="news" constraintName="FK_news_category"
                                 referencedColumnNames="id" referencedTableName="category"/>
    </changeSet>
</databaseChangeLog>
